{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",


  "title": {
  "text": "Government Spending",
  "subtitle": ["General Government: Final", " consumption expenditure: P3: CVM SA Â£", "Source: ONS"],
  "subtitleFontStyle":"italic",
  "subtitleFontSize":10,
  "anchor": "start",
  "color": "black"
},


  "width":180,
  "height":200,

  "data": {
      "name":"myData",
      "url": "https://raw.githubusercontent.com/JohnBezodis/JohnBezodis.github.io/main/ONS_data_NMRY.json",
      "format": {
        "type":"json",
        "property": "years"
      }},


  "mark":{
    "type": "line",
    "color":"#00BFFF",
    "strokeWidth":2,
    "opacity":1
  },

  "transform": [
    {"filter": "datum.year>minYear"},
    {"filter": "datum.year<maxYear"},
    {"calculate": "datum.value*1000000", "as": "series"}
  ],

  "params": [    
    {"name":"minYear", "value":1960,
       "bind":{
         "input": "range",
         "min": 1960, 
         "max": 2022, 
         "step": 1,
         "name": "Start year:"}
    },

    {"name":"maxYear", "value":2022,
       "bind":{
         "input": "range",
         "min": 1960, 
         "max": 2022, 
         "step": 1,
         "name": "End year:"}
    }
  ],


  "encoding": {
    
    "x": {
      "field": "date",
      "type": "temporal",
      "title":null
      },

    "y": {
      "field": "series",                
      "type": "quantitative",
      "title":null,
      "scale":{
        "domain":{
          "data": "myData", 
          "field": "series"}},
      "axis": {"format":".2s"}
      }
}
}