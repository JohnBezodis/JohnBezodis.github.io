{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
    "text": ["Chart 5: Moving Average of Seasonally Adjusted search interst in terms related to energy efficient goods/services"],
    "subtitle":["20 observation MA of relative interest in Google search terms on scale of 0-100", "Source: Google Trends"],
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"},

  
  "data": {
    "url": "https://raw.githubusercontent.com/JohnBezodis/JohnBezodis.github.io/main/trends_data_longer_sa.csv",
    "format": {"type": "csv"}
  },

 
  "height": 400,
  "width": 700,

  "layer":[
    {"mark": {"type": "line", "point": false},
  "transform": [{"window": [{"field": "interest_sa",
  "op": "mean",
  "as": "interestRollingMean"}],
  "frame": [-20,0]}, 
  {"filter": {"field": "date", "range": [{"year": 2019, "month": "apr", "date": 1}, {"year": 2022, "month": "dec", "date": 20}] }}], 
  
 "encoding": {
  
  "x": {
    "field": "date",
    "type": "temporal",

    "title": null,
    "axis": {"grid": false, "format": "%b %y"}},

  "y": {
    "field": "interestRollingMean",
    "type": "quantitative",
    "title": null,
    "axis": {"grid": false}},

  "color": {
    "condition": {
      "param": "hover",
      "field": "search_term",
      "type": "nominal",
      "legend": {"orient": "top-left", "title":null}
    },
    "value": "grey"

 },
 "opacity": {"condition": {"param": "hover", "value": 1}, "value": 0.2},
  "tooltip": [
    {"field": "search_term", "title": "Search Term"},
    {
      "field": "interestRollingMean",
      "title": "Search Interest",
      "type": "quantitative"
    },
    {"field": "date", "type": "temporal", "title": "Date"}
  ]
},
"layer": [
  {

    "params": [
      {
        "name": "hover",
        "value": [{"search_term": "energy efficient"}],
        "select": {"type": "point", "fields": ["search_term"], "on": "mouseover"}
      }
    ],
    "mark": {"type": "line", "strokeWidth": 8, "stroke": "transparent"}
  },
  {"mark": "line"}
]},
{"mark": {"type":"rule", "color":"black"},
"encoding": {"x": {"datum": {"year": 2022, "month": "feb", "date": 1}
}}},
{"mark": {"type":"rule", "color":"black"},
"encoding": {"x": {"datum": {"year": 2022, "month": "feb", "date": 1}
}}},
{"mark":{"type": "text", "color":"black"},
"encoding": {"x": {"datum":{"year": 2021, "month": "nov", "date": 1}},
"y": {"datum":75},
"text":{"value": "Russian Invasion"}

}
}
]
}